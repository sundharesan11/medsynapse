# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# ============================================================================
# LANGSMITH (Optional - for tracing and debugging)
# ============================================================================
# Get your API key from: https://smith.langchain.com/settings
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=ls__your_langsmith_api_key_here
LANGCHAIN_PROJECT=medsynapse-dev
LANGSMITH_API_KEY=ls__your_langsmith_api_key_here
LANGSMITH_TRACING_V2=true
LANGSMITH_PROJECT=medsynapse-dev

# ============================================================================
# QDRANT (Vector Database)
# ============================================================================
# For Docker deployment, use the service name:
# QDRANT_URL=http://qdrant:6333
# For local development without Docker, use:
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for local development

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# DOCKER CONFIGURATION (for docker-compose)
# ============================================================================
# Backend API port
BACKEND_PORT=8000

# Frontend dev server port
FRONTEND_PORT=5173

# Backend API URL for frontend
VITE_API_URL=http://localhost:8000
